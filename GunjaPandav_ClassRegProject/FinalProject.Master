        }

        .auto-style1 {
            font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
            font-size: 16px;
            text-align: center;
        }

        .auto-style2 {
            font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
            display: inline-block;
            width: 40%;
            height: 25px;
            margin: 0px;
            /*border: 3px solid #73AD21;*/
